<odoo>
    <data>

        <record id="acta_inicio" model="ir.actions.act_window">
            <field name="name">Acta de inicio de auditoria</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">auditorias.acta_inicio</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="acta_inicio_tree_view" model="ir.ui.view">
            <field name="name">Acta de inicio de auditoria</field>
            <field name="model">auditorias.acta_inicio</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="numero_auditoria"/>
                    <field name="oficio_inicio"/>
                    <field name="oficio_notificacion"/>
                    <field name="fecha"/>
                    <field name="capturista"/>
                    <field name="fecha_captura"/>
                </tree>
            </field>
        </record>

        <record id="acta_inicio_search" model="ir.ui.view">
            <field name="name">Acta de inicio de auditoria</field>
            <field name="model">auditorias.acta_inicio</field>
            <field name="arch" type="xml">
                <search>
                    <field name="numero_auditoria"/>
                    <field name="oficio_inicio"/>
                    <field name="oficio_notificacion"/>
                    <field name="fecha"/>
                    <field name="capturista"/>
                    <field name="fecha_captura"/>
                </search>
            </field>
        </record>

        <record id="acta_inicio_form" model="ir.ui.view">
            <field name="name">Acta de inicio de auditoria</field>
            <field name="model">auditorias.acta_inicio</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="numero_auditoria" placeholder="Número de auditoría"/>
                            </h1>
                        </div>
                        <notebook>
                            <page string="Información General">
                                <group>
                                    <field name="oficio_inicio"/>
                                    <field name="oficio_notificacion"/>
                                    <field name="fecha"/>
                                    <field name="subir_oficio"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem name="Acta de inicio" id="acta_inicio_menuitem"
              parent="menu_auditorias"
              action="acta_inicio" sequence="3"/>
    </data>
</odoo>