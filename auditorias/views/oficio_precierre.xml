                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem name="Oficio de precierre" id="oficio_precierre_menuitem"
              parent="menu_auditorias"
              action="oficio_precierre" sequence="4"/>
    </data>
</odoo>