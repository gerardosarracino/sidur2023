            <field name="name">Respuestas</field>
            <field name="model">auditorias.respuestas</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="observacion" widget="char" placeholder="ObservaciÃ³n"/>
                            </h1>
                        </div>
                        <notebook>
                            <page string="InformaciÃ³n General">
                                <group>
                                    <field name="oficio"/>
                                    <field name="oficio_precierre"/>
                                    <field name="oficio_ciere"/>
                                    <field name="medida_solventacion"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem name="Respuestas" id="respuestas_menuitem"
              parent="menu_auditorias"
              action="respuestas" sequence="6"/>
    </data>
</odoo>