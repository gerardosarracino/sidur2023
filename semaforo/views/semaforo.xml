             <filter string="REMODELACIÃN" name="tipo_obra" domain="[('tipo_obra.tipo_obra', '=', 'REMODELACIÃN')]" />
             <filter string="SERVICIOS" name="tipo_obra" domain="[('tipo_obra.tipo_obra', '=', 'SERVICIOS')]" />
             <filter string="VERIFICACIÃN ELÃCTRICA" name="tipo_obra" domain="[('tipo_obra.tipo_obra', '=', 'VERIFICACIÃN ELÃCTRICA')]" />
